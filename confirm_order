async def confirm_order(update: Update, context: ContextTypes.DEFAULT_TYPE):
    query = update.callback_query
    await query.answer()

    cart = context.user_data.get("cart")
    if not cart:
        await query.message.reply_text("üõí –ö–æ—à–∏–∫ –ø–æ—Ä–æ–∂–Ω—ñ–π")
        return

    user = update.effective_user
    username = get_username(user)
    total = sum(item["price"] for item in cart)

    # ===== –ü–æ–≤—ñ–¥–æ–º–ª–µ–Ω–Ω—è –¥–ª—è —Ç–µ–±–µ (–≤–ª–∞—Å–Ω–∏–∫–∞) =====
    owner_text = (
        "üÜï –ù–û–í–ï –ó–ê–ú–û–í–õ–ï–ù–ù–Ø\n\n"
        f"üë§ –ö–ª—ñ—î–Ω—Ç: {user.full_name}\n"
        f"üîó Username: {username}\n\n"
    )

    for item in cart:
        owner_text += f"‚Ä¢ {item['name']} ‚Äî {item['price']} ‚Ç¨\n"

    owner_text += f"\nüí∞ –°—É–º–∞: {total} ‚Ç¨"

    await context.bot.send_message(
        chat_id=OWNER_ID,
        text=owner_text,
    )

    # ===== –ü–æ–≤—ñ–¥–æ–º–ª–µ–Ω–Ω—è –∫–ª—ñ—î–Ω—Ç—É =====
    client_text = (
        "‚úÖ –í–∞—à–µ –∑–∞–º–æ–≤–ª–µ–Ω–Ω—è –ø—Ä–∏–π–Ω—è—Ç–æ!\n\n"
        "üì¶ –î–ª—è —É–∑–≥–æ–¥–∂–µ–Ω–Ω—è –¥–æ—Å—Ç–∞–≤–∫–∏ —Ç–∞ –¥–µ—Ç–∞–ª–µ–π, –±—É–¥—å –ª–∞—Å–∫–∞, "
        "–∑–≤ º—è–∂—ñ—Ç—å—Å—è –∑ –∫—É—Ä º—î—Ä–æ–º:\n\n"
        f"üëâ {COURIER_USERNAME}\n\n"
        "–î—è–∫—É—î–º–æ –∑–∞ –∑–∞–º–æ–≤–ª–µ–Ω–Ω—è!"
    )

    await query.message.reply_text(client_text)

    context.user_data.clear()
